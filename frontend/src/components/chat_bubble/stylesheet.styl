$font-size=16px
$horizontal-padding=12px
$vertical-padding=8px

.root
  padding 1px $horizontal-padding 0 $horizontal-padding
  &:after
    display block
    content ""
    clear both

  &:first-child
    margin-top 20px

  &:last-child .bubble
    &:before, &:after
      content ""

.bubble
  position relative
  max-width 100%
  box-sizing border-box
  padding $vertical-padding $horizontal-padding
  font-size $font-size
  border-radius ($font-size / 2 + $vertical-padding)
  overflow-wrap break-word

  &:before, &:after
    position absolute
    bottom 0
    height 20px

  &:before
    width ($horizontal-padding * 2)
    background inherit

  &:after
    width ($horizontal-padding * 2)
    background #fff

.me
  float right
  background #0E82F8
  color #fff

  &:before
    right ($horizontal-padding * -1)
    border-bottom-left-radius 15px

  &:after
    left 100%
    border-bottom-left-radius 10px

.them
  float left
  background #E6E5EB
  color #000

  &:before
    left ($horizontal-padding * -1)
    border-bottom-right-radius 15px

  &:after
    right 100%
    border-bottom-right-radius 10px
